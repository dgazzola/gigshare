{
  "version": 2,
  "builds": [
    {
      "src": "server/src/app.js",
      "use": "@vercel/node"
    },
    {
      "src": "client/webpack.config.js",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "server/public/dist"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "server/src/app.js"
    },
    {
      "src": "/(.*)",
      "dest": "server/public/dist/index.html"
    }
  ]
}
